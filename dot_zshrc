alias fd='fd -I --no-ignore-vcs'
alias matumoto='echo "Hello, I am matumoto!"'
alias mv='mv -v'
#alias rm='rm -v'
alias gitroot='cd `git rev-parse --show-superproject-working-tree --show-toplevel | head -1`'
alias sed="gsed"
alias xargs="gxargs"

